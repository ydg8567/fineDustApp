extends ../layout

block content
    link(rel='stylesheet', href='/css/board.css')

    script.
        const goToAddBoard = () => {
            location.href = '/addBoard';
        }
        const goToUpdateBoard = (nums) => {
            location.href = '/updateBoard?nums=' + nums;
        }

    table.type09(id='List' class = "table table-hover")
        thead
        tr
            th(scope='cols' style="width:10%") nums
            th(scope='cols' style="width:55%") Title
            th(scope='cols' style="width:10%") Autor
            th(scope='cols') Date
            th(scope='cols' style="width:10%") Views
        tbody#tbody
            each map in boardDatas
                tr
                    td #{map.nums}
                    td(style="text-align:left")
                        a(href="#" onclick="goToUpdateBoard(" + map.nums+ ")")= map.title
                    td #{map.autor}
                    td #{map.date}
                    td #{map.views}


    div(align="right" style="margin-right:10%;")
        //a(class="btn btn-primary pull-right") 글쓰기
        button.btn.btn-info(onClick='goToAddBoard()') 글 쓰기

